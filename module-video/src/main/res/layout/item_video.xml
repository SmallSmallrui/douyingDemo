<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#000"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ResourceName">
    <com.littlehu.module_video.mvp.ui.view.LHVideoPlayer
        android:id="@+id/lh_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_37"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_width="@dimen/dp_170"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_title"
            android:text="East Coast REMIX"
            android:textSize="@dimen/sp_20"
            android:textColor="@color/color_white"
            android:layout_width="match_parent"
            android:lines="1"
            android:ellipsize="end"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/tv_author"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="A$AP Ferg / Busta Rhymes"
            android:textColor="@color/color_white"
            android:textSize="@dimen/sp_14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:scaleType="fitXY"
                android:src="@mipmap/ic_un_love"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />

            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@mipmap/ic_pinlun"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />

            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp_25"
                android:src="@mipmap/ic_share"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />

            <ImageView
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/dp_16"
                android:src="@mipmap/ic_more"
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_25" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_marginBottom="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_13"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:src="@drawable/bg_user_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>